{
  "rules": {
    "no-duplicate-variable": true,
    "no-unused-variable": [
      true,
      {"ignore-pattern": "^_"}
    ],
    "trailing-comma": [true, {
      "multiline": "always",
      "singleline": "never"
    }],
    "only-arrow-functions": [true, "allow-named-functions"]
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ]
}
