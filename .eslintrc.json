{
    "extends": ["eslint:recommended", "google"],
    "parser": "babel-eslint",
    "env": {
        "browser" :true
    },
    "globals": {
        "goog": null,
        "angular": false,
        "moment": true,
        "Chart": true,
        "ionic": true,
        "Raven": true,
        "Swiper": true
    },
    "rules": {
      "no-console": "off",
      "no-empty": ["error", {
        "allowEmptyCatch": true
      }],
      "prefer-const": "warn",
      "no-var": "warn",
        "quotes": ["error", "single", {
            "avoidEscape": true
        }],
        "indent": ["error", 2],
        "func-style": ["warn", "declaration"],
        "max-len": ["error",
            {
                "code": 100,
                "ignoreComments": true
            }
        ],
        "guard-for-in": "off",
        "comma-dangle": ["error", {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "always-multiline",
            "exports": "always-multiline",
            "functions": "always-multiline"
        }],
        "key-spacing": ["error",
            {
                "align": "value"
            }
        ],
        "no-unused-vars": ["warn",
            {
                "args": "all",
                "argsIgnorePattern": "^_",
                "vars": "all"
            }
        ],
        "radix": "off",
        "one-var": ["error",
            {
                "uninitialized": "always",
                "initialized": "never"
            }
        ],
        "require-jsdoc": ["off",
            {
                "require": {
                    "FunctionDeclaration": true,
                    "MethodDefinition": true
                }
            }
        ]
    }
}
